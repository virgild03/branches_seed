{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/test.ts",
    "src/questions"
  ]
}
